<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid color for the button -->
    <solid android:color="#6200EE" /> <!-- Change this to your preferred color -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" /> <!-- Adjust the radius for more or less rounding -->

    <!-- Optional border (if you want a border around the button) -->
    <stroke
        android:color="#3700B3"
    android:width="1dp" />

    <!-- Optional shadow effect -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
